<Window x:Class="Assignment6.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment6"
        mc:Ignorable="d"
        Title="Confirmation" Height="150" Width="400">
    <StackPanel>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblMessage" Content="Label" HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" Margin="0 5 0 0"/>
            <Button x:Name="btnYes" Content="Yes" Width="70" Grid.Column="0" Grid.Row="1" Margin="0 50 0 0" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" Width="70" Grid.Column="1" Grid.Row="1"  Margin = "0 50 0 0" Click="btnNo_Click"/>
        </Grid>
    </StackPanel>
</Window>
