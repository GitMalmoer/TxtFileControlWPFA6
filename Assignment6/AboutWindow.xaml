<Window x:Class="Assignment6.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment6"
        mc:Ignorable="d"
        Title="AboutWindow" Height="280" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Thank you for using my App The app was made by Marcin Junka" FontSize="22" TextWrapping="Wrap" FontStyle="Italic" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Image x:Name="imgSword" Source="diamondsword.png" Height="100" Width="100" Margin=" 30"/>
            <Button x:Name="btnExit" Content="Exit" Width="80" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
